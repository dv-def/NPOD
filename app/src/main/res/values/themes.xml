<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="appTextColor">@color/black</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="appOutlinedMainColor">?attr/colorPrimary</item>

    </style>

    <style name="BaseTheme.DefaultTheme">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="BaseTheme.MarsTheme">
        <item name="colorPrimary">@color/mars_primary_color</item>
        <item name="colorPrimaryVariant">@color/mars_primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/mars_secondary_color</item>
        <item name="colorSecondaryVariant">@color/mars_primary_variant_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:background">@color/mars_background_color</item>
    </style>

    <style name="BaseTheme.DarkTheme">
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dark_secondary_color</item>
        <item name="colorSecondaryVariant">@color/dark_secondary_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:background">@color/dark_background_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="appTextColor">@color/white</item>
        <item name="chipBackgroundColor">@color/teal_200</item>
        <item name="appOutlinedMainColor">@color/dark_secondary_color</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light">
        <item name="colorOnSurface">@color/mars_primary_color</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="textFillColor">@color/white</item>
    </style>

</resources>