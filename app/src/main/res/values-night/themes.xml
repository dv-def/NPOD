<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="appTextColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="chipStyle">@style/ChipStyle.NightChip</item>
        <item name="appOutlinedMainColor">@color/white</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ChipStyle.NightChip">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>