<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_sheet_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/bottom_sheet_top_peek_height"
    android:background="@color/bottom_sheet_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/top_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottom_sheet_top_line_height"
            android:layout_marginStart="@dimen/bottom_sheet_top_line_margin"
            android:layout_marginEnd="@dimen/bottom_sheet_top_line_margin"
            android:background="@color/bottom_sheet_top_line_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/bottom_sheet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_sheet_top_margin"
            android:layout_marginStart="@dimen/bottom_sheet_start_margin"
            android:layout_marginEnd="@dimen/bottom_sheet_end_margin"
            android:textSize="@dimen/bottom_sheet_title_text_size"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_line"/>

        <TextView
            android:id="@+id/bottom_sheet_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_sheet_top_margin"
            android:layout_marginStart="@dimen/bottom_sheet_start_margin"
            android:layout_marginEnd="@dimen/bottom_sheet_end_margin"
            android:textSize="@dimen/bottom_sheet_explanation_text_size"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>